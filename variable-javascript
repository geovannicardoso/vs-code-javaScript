const prompt = require('prompt-sync')();

const peso = prompt('Digite seu peso: ');
const nome= prompt('Digite seu nome: ');
const sobrenome= prompt('Digite seu sobrenome: ');
const altura= prompt('Digite sua altura: ');
const dataint= prompt('Digite a data de internação: ');
const diabetico= prompt('Você é diabético? Digite sim ou não: ');

console.log(`O nome digitado foi: ${nome}`);
console.log(`O sobrenome digitado foi: ${sobrenome}`);
console.log(`O peso digitado foi: ${peso}`);
console.log(`A altura digitada foi: ${altura}`);
console.log(`A data de internação e:: ${dataint}`);
console.log(`e diabético? ${diabetico}`);



